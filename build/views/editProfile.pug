extends layouts/main

block content
  .form-container
    form(action=`/users${routes.editProfile}`, method="post", enctype="multipart/form-data")
      .fileUpload
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatarFile", accept="image/*")
      input(type="text", name="name", placeholder="Name", required=true, value=loggedUser.name)
      input(type="email", name="email", placeholder="Email", required=true, value=loggedUser.email)
      input(type="submit", value="Update Profile")
